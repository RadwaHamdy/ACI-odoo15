<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_users_form" model="ir.ui.view">
            <field name="name">usability.default_warehouse.res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <group name="messaging" position="before">
                    <group string="Warehouse Restrictions">
                        <field name="default_picking_type_ids" widget="many2many_tags"/>
                    </group>
                </group>
            </field>
        </record>

        <record id="view_location_security_users_form" model="ir.ui.view">
            <field name="name">location_security.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <group name="messaging" position="before">
                    <group string="Locations">
                        <field name="restrict_locations"/>
                    </group>
                    <group>
                        <field name="restrict_stock_locs"/>
                    </group>
                </group>
                <notebook>
                    <page string="Allowed Operation Locations" attrs="{'invisible': [('restrict_locations','!=', True)]}">
                       <group>
                             <field name="stock_location_ids" nolabel="1" colspan="2"/>


                       </group>

                    </page>
                    <page string="Allowed Stock Locations" attrs="{'invisible': [('restrict_stock_locs','!=', True)]}">
  <group>
                                <div>
                                    <h2>
                                                                    Allowd locations to Know Stock in
                                    </h2>
                        </div>
                        <field name="allowed_stock_loc_ids"  nolabel="1" colspan="2" />
                           </group>

                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>
