<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_version_form_view" model="ir.ui.view">
            <field name="name">product.version.form.view</field>
            <field name="model">product.version</field>
            <field name="arch" type="xml">
                <form string="Product Version">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_version_list_view"  model="ir.ui.view" >
            <field name="name">product.version.list.view</field>
            <field name="model">product.version</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="product_version_action"  model="ir.actions.act_window">
            <field name="name">Product Version</field>
            <field name="res_model">product.version</field>
            <field name="view_mode">tree,form</field>
        </record>
</odoo>