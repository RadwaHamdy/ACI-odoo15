<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--   new template  for dates label    -->
        <template id="report_date_label">
    <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="o">
            <t>
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <table class="table table-condensed" style="border-bottom: 0px solid white !important;width: 3.5in;margin-left: -4mm;margin-top: -2mm;margin-bottom: -2mm;">
                                <tr>
                                  <th style="text-align: center;width: 40mm;font-size: 19px;">
                                   <!--<p style="font-family:Times New Roman;">-->
                                      شركة الصناعات الكيماوية المتطورة برج العرب ,المنطقة الصناعية 1,بلوك 21
                               <!--</p>        -->
                                  </th>
                                </tr>
                                <tr name="lot_name">
                                    <td style="text-align: center;font-size: 20px;font-weight:bold;">
                                        تاريخ الإنتاج:
                                        <span t-field="o.aci_production_date" t-options='{"format": "dd/MM/yyyy"}'/>
                                      <br/>
                                        تاريخ الإنتهاء:
                                        <span t-field="o.expiration_date" t-options='{"format": "dd/MM/yyyy"}'/>
                                    </td>

                                </tr>
                                <tr>
                                  <td style= "text-align: center;font-size: 18px;font-family:Droid Arabic Kufi;margin-top: -1mm;font-weight:bold;">
                                    صنع في مصر
                                    </td>
                                </tr>
                            </table>
                    </div>
                </div>
            </t>
        </t>
    </t>
</template>

    </data>
</odoo>