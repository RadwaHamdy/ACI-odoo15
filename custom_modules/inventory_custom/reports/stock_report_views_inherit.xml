<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--   lot label custom dimension for zebra printer      -->
        <record id="paperformat_lotlabel" model="report.paperformat">
            <field name="name">Product Lot Label(5x4)</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">40</field>
            <field name="page_width">50</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

<!--  new report for lot dates      -->
        <record id="action_report_Date_label" model="ir.actions.report">
            <field name="name">Dates Label (PDF)</field>
            <field name="model">stock.production.lot</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">inventory_custom.report_date_label</field>
            <field name="report_file">inventory_custom.report_date_label</field>
            <field name="print_report_name">'Date-Serial - %s' % object.name</field>
            <field name="binding_model_id" ref="model_stock_production_lot"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="inventory_custom.paperformat_lotlabel" />
        </record>


        <record id="stock.action_report_lot_label" model="ir.actions.report">
                <field name="paperformat_id" ref="inventory_custom.paperformat_lotlabel" />
        </record>
    </data>
</odoo>